/**
 * @file Firestore Security Rules for SmartGas Guardian.
 *
 * @core_philosophy This ruleset enforces a strict user-ownership model.  Users can only
 * read and write data associated with their own user ID. All data is nested under
 * /users/{userId}, ensuring clear ownership. Listing of users is disallowed for privacy.
 *
 * @data_structure
 * - /users/{userId}: Stores user profile information.  Document ID is the Firebase Auth UID.
 * - /users/{userId}/devices/{deviceId}: Stores devices owned by the user.
 * - /users/{userId}/devices/{deviceId}/alerts/{alertId}: Stores alerts generated by a specific device.
 *
 * @key_security_decisions
 * - User listing is disallowed for privacy.
 * - All write operations are validated against the authenticated user's UID.
 * - The 'id' field in User, Device, and Alert documents must match the corresponding path segment (userId, deviceId, alertId).
 *
 * @denormalization_for_authorization
 * - The `Alert` entity includes a `userId` field, duplicating the user's ID from the path. This allows direct validation without requiring a `get()` call to the parent `Device` document.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secure user profiles.  Users can only read/write their own profile.
     * @path /users/{userId}
     * @allow (create) - User with UID 'user_abc' can create their profile at /users/user_abc.
     * @allow (get) - User with UID 'user_abc' can read their profile at /users/user_abc.
     * @allow (update) - User with UID 'user_abc' can update their profile at /users/user_abc.
     * @allow (delete) - User with UID 'user_abc' can delete their profile at /users/user_abc.
     * @deny (create) - User with UID 'user_xyz' cannot create a profile at /users/user_abc.
     * @principle Enforces document ownership for writes; restricts access to a user's own data.
     */
    match /users/{userId} {
      /**
       * Checks if the request is made by the owner (UID matches the document ID).
       * @param {string} userId - The user ID from the path.
       * @return {bool} - True if the user is the owner, false otherwise.
       */
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      /**
       * Checks if the user is signed in.
       * @return {bool} - True if the user is signed in, false otherwise.
       */
      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false; // Listing users is not allowed.
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Secure devices subcollection. Users can only manage their own devices.
     * @path /users/{userId}/devices/{deviceId}
     * @allow (create) - User 'user_abc' can create a device under /users/user_abc/devices/device_123.
     * @allow (get) - User 'user_abc' can read a device under /users/user_abc/devices/device_123.
     * @allow (update) - User 'user_abc' can update a device under /users/user_abc/devices/device_123.
     * @allow (delete) - User 'user_abc' can delete a device under /users/user_abc/devices/device_123.
     * @deny (create) - User 'user_xyz' cannot create a device under /users/user_abc/devices/device_123.
     * @principle Enforces document ownership for writes; restricts access to a user's own data tree; validates relational integrity.
     */
    match /users/{userId}/devices/{deviceId} {
      /**
       * Checks if the request is made by the owner (UID matches the userId path segment).
       * @param {string} userId - The user ID from the path.
       * @return {bool} - True if the user is the owner, false otherwise.
       */
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      /**
       * Checks if the user is signed in.
       * @return {bool} - True if the user is signed in, false otherwise.
       */
      function isSignedIn() {
        return request.auth != null;
      }

      /**
       * Checks if the owner exists before allowing the write.
       * @param {string} userId - The user ID from the path.
       * @return {bool} - True if the user is the owner and the resource exists, false otherwise.
       */
      function isExistingOwner(userId) {
          return exists(/databases/$(database)/documents/users/$(userId));
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId) && isExistingOwner(userId);
      allow update: if isSignedIn() && isOwner(userId) && isExistingOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId) && isExistingOwner(userId);
    }

    /**
     * @description Secure alerts subcollection. Users can only access alerts for their own devices.
     * @path /users/{userId}/devices/{deviceId}/alerts/{alertId}
     * @allow (create) - User 'user_abc' can create an alert under /users/user_abc/devices/device_123/alerts/alert_456.
     * @allow (get) - User 'user_abc' can read an alert under /users/user_abc/devices/device_123/alerts/alert_456.
     * @allow (update) - User 'user_abc' can update an alert under /users/user_abc/devices/device_123/alerts/alert_456.
     * @allow (delete) - User 'user_abc' can delete an alert under /users/user_abc/devices/device_123/alerts/alert_456.
     * @deny (create) - User 'user_xyz' cannot create an alert under /users/user_abc/devices/device_123/alerts/alert_456.
     * @principle Enforces document ownership for writes; restricts access to a user's own data tree; validates relational integrity.
     */
    match /users/{userId}/devices/{deviceId}/alerts/{alertId} {
      /**
       * Checks if the request is made by the owner (UID matches the userId path segment).
       * @param {string} userId - The user ID from the path.
       * @return {bool} - True if the user is the owner, false otherwise.
       */
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      /**
       * Checks if the user is signed in.
       * @return {bool} - True if the user is signed in, false otherwise.
       */
      function isSignedIn() {
        return request.auth != null;
      }

      /**
       * Checks if the owner exists before allowing the write.
       * @param {string} userId - The user ID from the path.
       * @return {bool} - True if the user is the owner and the resource exists, false otherwise.
       */
      function isExistingOwner(userId) {
          return exists(/databases/$(database)/documents/users/$(userId));
      }

      /**
       * Checks if the device exists before allowing the write.
       * @param {string} userId - The user ID from the path.
       * @param {string} deviceId - The device ID from the path.
       * @return {bool} - True if the device exists, false otherwise.
       */
      function isExistingDevice(userId, deviceId) {
          return exists(/databases/$(database)/documents/users/$(userId)/devices/$(deviceId));
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId) && isExistingOwner(userId) && isExistingDevice(userId, deviceId);
      allow update: if isSignedIn() && isOwner(userId) && isExistingOwner(userId) && isExistingDevice(userId, deviceId);
      allow delete: if isSignedIn() && isOwner(userId) && isExistingOwner(userId) && isExistingDevice(userId, deviceId);
    }
  }
}