/**
 * @fileoverview Firestore Security Rules for SmartGas Guardian.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for devices and alerts.
 * Each user can only access their own data, and devices/alerts are always scoped
 * to their owner.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles, with the document ID matching the Firebase Auth UID.
 * - /users/{userId}/devices/{deviceId}: Stores devices owned by a specific user.
 * - /users/{userId}/devices/{deviceId}/alerts/{alertId}: Stores alerts generated by a specific device.
 *
 * Key Security Decisions:
 * - Users can only list devices and alerts that they own.
 * - All writes (create, update, delete) are restricted to the owner of the data.
 *
 * Denormalization for Authorization:
 * The `userId` field is included in the `Device` and `Alert` entities to allow direct
 * enforcement of ownership without requiring additional `get()` calls.  On create,
 * we validate that the `userId` field matches the authenticated user's UID. On updates,
 * we ensure that the `userId` field cannot be changed.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Protects the /users/{userId} collection.
     * @path /databases/{database}/documents/users/{userId}
     * @allow (create) If the user is creating their own profile (UID matches document ID).
     * @allow (get, update, delete) If the user is the owner of the profile.
     * @deny (list) Listing all users is not permitted.
     * @deny (create) If user attempts to create a document with an ID that does not match their auth UID.
     * @principle Enforces user-ownership for profile data.  Allows self-creation of user profiles.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Protects the /users/{userId}/devices/{deviceId} collection.
     * @path /databases/{database}/documents/users/{userId}/devices/{deviceId}
     * @allow (create) If the user is creating a device for themselves and the userId matches.
     * @allow (get, list, update, delete) If the user is the owner of the device.
     * @deny (create) If the userId in the request does not match the authenticated user.
     * @principle Enforces user-ownership for devices.
     */
    match /users/{userId}/devices/{deviceId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Protects the /users/{userId}/devices/{deviceId}/alerts/{alertId} collection.
     * @path /databases/{database}/documents/users/{userId}/devices/{deviceId}/alerts/{alertId}
     * @allow (create) If the user is creating an alert for their own device and the userId matches.
     * @allow (get, list, update, delete) If the user is the owner of the alert through the device.
     * @deny (create) If the userId in the request does not match the authenticated user.
     * @principle Enforces user-ownership for alerts.
     */
    match /users/{userId}/devices/{deviceId}/alerts/{alertId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }
  }
}