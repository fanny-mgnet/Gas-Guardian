/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model for the SmartGas Guardian system.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profile information. The document ID is the user's UID.
 * - /users/{userId}/devices/{deviceId}: Stores devices owned by each user.
 * - /users/{userId}/devices/{deviceId}/alerts/{alertId}: Stores alerts generated by each device.
 *
 * Key Security Decisions:
 * - Users can only access their own data (profile, devices, alerts).
 * - Listing the root collection is disallowed to prevent unintended data exposure.
 * - Write operations on devices and alerts require the `userId` field to match the parent `userId` path segment.
 *
 * Denormalization for Authorization:
 * - Alerts contain a `userId` field, mirroring the parent device's `userId`, to simplify security rules and avoid costly `get()` operations.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Prevents listing all documents in the database.
     * @path /databases/{database}/documents
     * @allow N/A (listing is always denied)
     * @deny (list) Any attempt to list all documents.
     * @principle Prevents unauthorized data discovery.
     */
    match /{document=**} {
      allow list: if false;
    }

    /**
     * @description Controls access to user profile documents.
     * @path /users/{userId}
     * @allow (get) Authenticated user reading their own profile.
     * @allow (create) Authenticated user creating their own profile.
     * @allow (update) Authenticated user updating their own profile.
     * @allow (delete) Authenticated user deleting their own profile.
     * @deny (get) Authenticated user reading other user profile.
     * @deny (create) Unauthenticated user creating any user profile.
     * @deny (update) Authenticated user updating other user profile.
     * @deny (delete) Authenticated user deleting other user profile.
     * @principle Enforces user-ownership; users can only manage their own profiles.
     */
    match /users/{userId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow update: if isSignedIn() && isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Controls access to device documents owned by a user.
     * @path /users/{userId}/devices/{deviceId}
     * @allow (get) Authenticated user reading their own device.
     * @allow (create) Authenticated user creating device for themselves.
     * @allow (update) Authenticated user updating their own device.
     * @allow (delete) Authenticated user deleting their own device.
     * @deny (get) Authenticated user reading other user's device.
     * @deny (create) Authenticated user creating device for other user.
     * @deny (update) Authenticated user updating other user's device.
     * @deny (delete) Authenticated user deleting other user's device.
     * @principle Enforces user-ownership; users can only manage their own devices.
     */
    match /users/{userId}/devices/{deviceId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isSignedIn() && isExistingOwner(userId) && request.resource.data.userId == userId;
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Controls access to alert documents for a specific device.
     * @path /users/{userId}/devices/{deviceId}/alerts/{alertId}
     * @allow (get) Authenticated user reading their own alert.
     * @allow (create) Authenticated user creating alert for themselves.
     * @allow (update) Authenticated user updating their own alert.
     * @allow (delete) Authenticated user deleting their own alert.
     * @deny (get) Authenticated user reading other user's alert.
     * @deny (create) Authenticated user creating alert for other user.
     * @deny (update) Authenticated user updating other user's alert.
     * @deny (delete) Authenticated user deleting other user's alert.
     * @principle Enforces user-ownership; users can only manage alerts for their devices.
     */
    match /users/{userId}/devices/{deviceId}/alerts/{alertId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isSignedIn() && isExistingOwner(userId) && request.resource.data.userId == userId;
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Checks if the user is signed in.
     * @return {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the user ID matches the authenticated user's UID.
     * @param {string} userId The user ID to check.
     * @return {boolean} True if the user ID matches the authenticated user's UID, false otherwise.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the user ID matches the authenticated user's UID and the resource exists.
     * @param {string} userId The user ID to check.
     * @return {boolean} True if the user ID matches the authenticated user's UID and the resource exists, false otherwise.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }
  }
}