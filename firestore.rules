/**
 * @description This ruleset enforces a strict user-ownership model for the SmartGas Guardian system.
 * All data is nested under /users/{userId}, ensuring that users can only access their own data.
 *
 * @dataStructure
 * - /users/{userId}: Stores user profile information, with the document ID matching the user's UID.
 * - /users/{userId}/devices/{deviceId}: Stores device information owned by the user.
 * - /users/{userId}/devices/{deviceId}/alerts/{alertId}: Stores alerts generated by a specific device.
 *
 * @keySecurityDecisions
 * - User listing is disallowed.
 * - All writes are restricted to the owner of the data.
 * - Root listing is disallowed.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Prevents listing of the entire root of the database.  This is a security measure to prevent unauthorized data discovery.
     * @path /databases/{database}/documents
     * @allow (get) N/A - get is not applicable to the root path
     * @deny (list) Any authenticated user attempting to list the root.
     * @principle Prevents unauthorized data discovery.
     */
    match / {
      allow list: if false;
      allow get: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Manages user profile information. Only the user can read and write their own profile.
     * @path /users/{userId}
     * @allow (create) Authenticated user creates their own profile (document ID matches auth UID).
     * @allow (get, list) Authenticated user reads their own profile.
     * @allow (update, delete) Authenticated user updates or deletes their own profile.
     * @deny (create) Any other user attempting to create a profile with a different user ID.
     * @deny (get, list, update, delete) Any other user attempting to access or modify another user's profile.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && existsAfter(resource);
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Manages devices owned by a user. Only the owner can manage their devices.
     * @path /users/{userId}/devices/{deviceId}
     * @allow (create) Authenticated user creates a new device under their profile. The device.userId must match the userId in the path.
     * @allow (get, list) Authenticated user reads their own devices.
     * @allow (update, delete) Authenticated user updates or deletes their own device.
     * @deny (create) Any other user attempting to create a device under another user's profile.
     * @deny (get, list, update, delete) Any other user attempting to access or modify another user's device.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/devices/{deviceId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && existsAfter(resource);
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Manages alerts generated by a device. Only the owner of the device can access the alerts.
     * @path /users/{userId}/devices/{deviceId}/alerts/{alertId}
     * @allow (create) Authenticated user creates a new alert for their device. The alert.userId must match the userId in the path.
     * @allow (get, list) Authenticated user reads alerts for their own devices.
     * @allow (update, delete) Authenticated user updates or deletes alerts for their own devices.
     * @deny (create) Any other user attempting to create an alert for another user's device.
     * @deny (get, list, update, delete) Any other user attempting to access or modify alerts for another user's device.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/devices/{deviceId}/alerts/{alertId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && existsAfter(resource);
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }
  }
}