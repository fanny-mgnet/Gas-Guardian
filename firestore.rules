rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile information.
     * @path /users/{userId}
     * @allow (create) - Authenticated user can create their own profile if the userId matches their auth UID.
     * @allow (get, update, delete) - Authenticated user can only access their own profile.
     * @deny (list) - Listing all users is not allowed.
     * @deny (create) - A user cannot create a profile with a userId that doesn't match their auth UID.
     * @principle Enforces document ownership, restricts user listing, and validates userId on create.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      // Allows user to read their own profile.
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;

      // Allows a user to create their profile, but only if the userId matches their auth UID.
      allow create: if isSignedIn() && isOwner(userId);

      // Allows a user to update and delete their own profile.
      allow update, delete: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Controls access to devices owned by a user.
     * @path /users/{userId}/devices/{deviceId}
     * @allow (create, get, list, update, delete) - Authenticated user can manage their own devices.
     * @deny (create, get, list, update, delete) - Another user cannot manage devices for a different user.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/devices/{deviceId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      // Only the owner can read their devices.
      allow get, list: if isSignedIn() && isOwner(userId);

      // Only the owner can create a device, and only if the userId matches.
      allow create: if isSignedIn() && isOwner(userId);

      // Only the owner can update or delete a device.
      allow update, delete: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Controls access to alerts for a specific device.
     * @path /users/{userId}/devices/{deviceId}/alerts/{alertId}
     * @allow (create, get, list, update, delete) - Authenticated user can manage alerts for their own devices.
     * @deny (create, get, list, update, delete) - Another user cannot manage alerts for a different user's devices.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/devices/{deviceId}/alerts/{alertId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      // Only the owner can read alerts for their devices.
      allow get, list: if isSignedIn() && isOwner(userId);

      // Only the owner can create an alert, and only if the userId matches.
      allow create: if isSignedIn() && isOwner(userId);

      // Only the owner can update or delete an alert.
      allow update, delete: if isSignedIn() && isOwner(userId);
    }
  }
}